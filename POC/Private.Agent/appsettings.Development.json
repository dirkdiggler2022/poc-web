{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Tunnel": {
    //https addres of public frontend
    //default agent defined in frontend globals, this will assign 1 agent for dev purposes
    //we use localhost to avoid tls issues
    "Url": "https://localhost:7243/connect-ws/DefaultAgent"
  },
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "{**catch-all}"
        }
      },
      "route2": {
        "ClusterId": "cluster2",
        "Match": {
          "Path": "/Health/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "cluster1/destination1": {
            //the customer website address
            "Address": "https://localhost:7067"
          }
        }
      },
      "cluster2": {
        "Destinations": {
          "cluster2/destination1": {
            //the customer website address
            "Address": "https://localhost:7243"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/health/DefaultAgent"
          }
        }
      }
    }
  }
}
