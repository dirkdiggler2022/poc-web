{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      //this is the route for the "defaultagent" used during development
      "defaultagent-route": {
        "ClusterId": "defaultagent-cluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      },
      "proxyhealth-route": {
        "ClusterId": "proxyhealth-cluster",
        "Match": {
          "Path": "/healthy/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "defaultagent-cluster": {
        "Destinations": {
          "agent1/destination1": {
            //must be http
            "Address": "http://backend1.app"
          }
        }
      },
      "proxyhealth-cluster": {
        "HealthCheck": {
          //checks roundtrip on
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Metadata": {
            "ConsecutiveFailuresHealthPolicy.Threshold": "1"
          }
        },
        "Destinations": {
          "health/destination1": {
            //must be http
            "Address": "https://localhost:7243/"
          }
        }
      }
    }
  }
}
