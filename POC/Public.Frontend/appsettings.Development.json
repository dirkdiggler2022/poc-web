{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "PublicProxyUrl": "https://localhost:7087/register",
  "ReverseProxy": {
    "Routes": {
      //this is the route for the "defaultagent" used during development
      //"Alpha-route": {
      //  "ClusterId": "Alpha-cluster",
      //  "Match": {
      //    "Path": "{**catch-all}",
      //    "Headers": [
      //      {
      //        "Name": "x-connection-key",
      //        "Values": [
      //          "Alpha"
      //        ],

      //        "Mode": 0,
      //        "IsCaseSensitive": false
      //      }
      //    ]
      //  }
      //},
      "proxyhealth-route": {
        "ClusterId": "proxyhealth-cluster",
        "Match": {
          "Path": "/healthy/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "Alpha-cluster": {
        //"LoadBalancingPolicy": "TunnelLoadBalancingPolicy",
        "Destinations": {
          "default": {
            //must be http
            "Address": "http://localhost:5069"
          }

        }
      },
      "proxyhealth-cluster": {
        "HealthCheck": {
          //checks roundtrip on
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Metadata": {
            "ConsecutiveFailuresHealthPolicy.Threshold": "1"
          }
        },
        "Destinations": {
          "health/destination1": {
            //must be http
            "Address": "https://localhost:7243/"
          }
        }
      }
    }
  }
}
