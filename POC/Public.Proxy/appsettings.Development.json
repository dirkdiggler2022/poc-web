{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      //this is the route for the "defaultagent" used during development
      "Alpha-route": {
        "ClusterId": "Alpha-cluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "Alpha-cluster": {
        "LoadBalancingPolicy": "ProxyLoadBalancingPolicy",
        "Destinations": {
          "default": {

            //must be http
            "Address": "https://localhost:7222"
          },
          "default/lb1": {

            //must be http
            "Address": "https://localhost:7233"
          }
        }
      }
    }
  }
}
